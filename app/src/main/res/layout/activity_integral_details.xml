<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.anjile.shineourlove.rxjavaapplication.activity.IntegralDetailsActivity">

    <include
        layout="@layout/include_top_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/integral_gain"
        android:textColor="@color/gray_word" />

    <TextView
        android:visibility="gone"
        android:id="@+id/txt_integral_details_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textColor="@color/black_word"
        android:textSize="44sp"
        tools:text="1,111" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_integral_details_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_divide" />

</LinearLayout>
