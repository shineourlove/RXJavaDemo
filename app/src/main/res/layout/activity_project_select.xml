<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.anjile.shineourlove.rxjavaapplication.activity.ProjectSelectActivity">

    <include
        android:id="@+id/include_project_select_top_bar"
        layout="@layout/include_top_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcy_project_select_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2" />
</LinearLayout>
