<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_aptitude_query_item_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_text_vertical_margin"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_marginTop="@dimen/item_text_vertical_margin"
            android:textColor="@color/black_wold"
            android:textSize="@dimen/item_text_size"
            tools:text="福建联谊建筑工程有限公司" />

        <TextView
            android:id="@+id/txt_aptitude_query_item_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/item_margin_right"
            android:background="@drawable/stroke_blue_1px"
            android:drawableLeft="@drawable/authentication_diamond"
            android:drawablePadding="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:textColor="@color/blue_word"
            android:textSize="13sp"
            tools:text="重庆市" />
    </RelativeLayout>

    <include
        android:id="@+id/include_aptitude_query_item_line"
        layout="@layout/item_divide_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>