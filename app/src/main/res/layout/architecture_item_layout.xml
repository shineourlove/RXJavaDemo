<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_architecture_item_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="#282828"
        android:textSize="14sp"
        tools:text="红旗渠建设集团有限公司" />

    <ImageView
        android:id="@+id/img_architecture_item_hint"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/txt_architecture_item_company"
        tools:src="@drawable/ssdk_oks_classic_email" />

    <TextView
        android:id="@+id/txt_architecture_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:textColor="#656565"
        android:textSize="13sp"
        tools:text="最近中标：2017-9-26" />
</RelativeLayout>