<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="6dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_6_solid_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_bottom_choose_dialog_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="全部标记已读"
            android:textColor="@color/blue_word"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_divide" />

        <TextView
            android:id="@+id/txt_bottom_choose_dialog_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="清空聊天会话"
            android:textColor="@color/red"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_bottom_choose_dialog_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_marginTop="6dp"
        android:text="取消"
        android:background="@drawable/radius_6_solid_white"
        android:textSize="17sp"
        android:textColor="@color/blue_word" />
</LinearLayout>