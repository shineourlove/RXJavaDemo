<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_enterprise_detail_aptitude_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingTop="@dimen/enterprise_detail_aptitude_item_vertical_padding"
        android:textColor="@color/black_word"
        tools:text="建筑工程施工总承包/一级" />

    <TextView
        android:id="@+id/txt_enterprise_detail_aptitude_space"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:visibility="gone" />
</LinearLayout>