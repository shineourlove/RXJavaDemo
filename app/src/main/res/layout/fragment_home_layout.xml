<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_fragment_home_top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/gradient_blue_to_blue">

            <TextView
                android:id="@+id/txt_fragment_home_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingEnd="0dp"
                android:paddingStart="16dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="重庆" />

            <ImageView
                android:id="@+id/img_fragment_home_area"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_toEndOf="@+id/txt_fragment_home_area"
                android:src="@drawable/arrow_down" />

            <RelativeLayout
                android:id="@+id/rl_fragment_home_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/img_fragment_home_area"
                android:background="@drawable/radius_4_solid_white_30"
                android:gravity="center_vertical"
                android:paddingEnd="6dp"
                android:paddingStart="6dp">

                <ImageView
                    android:id="@+id/img_fragment_home_search"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ssdk_country_search_icon" />

                <TextView
                    android:id="@+id/txt_fragment_home_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/img_fragment_home_search"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_fragment_home_search"
                    android:background="#00ffffff"
                    android:hint="@string/search_hint"
                    android:paddingEnd="0dp"
                    android:paddingStart="4dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/item_text_size" />
            </RelativeLayout>
        </RelativeLayout>

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/cb_fragment_home"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/rl_fragment_home_top" />

        <LinearLayout
            android:id="@+id/ll_fragment_home_menu_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cb_fragment_home"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_fragment_home_talent_pool"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ssdk_oks_classic_facebook" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="人才库"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fragment_home_budget_program"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ssdk_oks_classic_alipay" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="预算方案"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fragment_home_material_shop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ssdk_oks_classic_googleplus" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="材料选购"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fragment_home_menu_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_fragment_home_menu_one"
            android:layout_marginTop="16dp"
            android:baselineAligned="true"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/ll_fragment_home_credit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ssdk_oks_classic_wechat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="信誉值"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fragment_home_vip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ssdk_oks_classic_linkedin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIP"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fragment_home_query"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ssdk_oks_classic_qq" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="查询"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/device_space_fragment_home_one"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/ll_fragment_home_menu_two"
            android:background="#f2f2f2" />

        <LinearLayout
            android:id="@+id/ll_fragment_home_hot_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/device_space_fragment_home_one"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ssdk_oks_classic_douban" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_fragment_home_hot_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    tools:text="市政公用工程施工总承包三级资质申请通过审查" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_fragment_home_hot_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_fragment_home_hot_one"
                    android:textSize="13sp"
                    tools:text="建筑装修装饰工程专业承包二级资质申请通过审查" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/device_space_fragment_home_two"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/ll_fragment_home_hot_point"
            android:background="#f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/device_space_fragment_home_two"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="40dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_fragment_home_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="16dp"
                        android:text="建筑企业"
                        android:textAlignment="center"
                        android:textColor="#009cff" />

                    <TextView
                        android:id="@+id/txt_fragment_home_company_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/blue_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_fragment_home_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="16dp"
                        android:text="荣誉信息"
                        android:textAlignment="center"
                        android:textColor="#656565" />

                    <TextView
                        android:id="@+id/txt_fragment_home_info_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_fragment_home_builder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="16dp"
                        android:text="建造师"
                        android:textAlignment="center"
                        android:textColor="#656565" />

                    <TextView
                        android:id="@+id/txt_fragment_home_builder_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/rcv_fragment_home_details"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:focusable="false" />-->

            <com.anjile.shineourlove.rxjavaapplication.view.AutoFitViewpager
                android:id="@+id/vp_fragment_home_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>