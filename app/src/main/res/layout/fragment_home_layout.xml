<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_fragment_home_top"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txt_fragment_home_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            android:textSize="18sp"
            tools:text="重庆" />

        <ImageView
            android:id="@+id/img_fragment_home_area"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txt_fragment_home_area"
            android:src="@drawable/ssdk_oks_classic_pocket" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/img_fragment_home_area"
            android:background="@drawable/redus_10_stroke_gray_width_1"
            android:gravity="center_vertical"
            android:paddingEnd="6dp"
            android:paddingStart="6dp">

            <ImageView
                android:id="@+id/img_fragment_home_search"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ssdk_country_search_icon" />

            <TextView
                android:id="@+id/txt_fragment_home_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_fragment_home_search"
                android:paddingEnd="0dp"
                android:paddingStart="4dp"
                android:text="@string/search_hint" />

        </RelativeLayout>
    </RelativeLayout>

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/cb_fragment_home"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/rl_fragment_home_top"
        android:layout_marginTop="6dp" />

    <LinearLayout
        android:id="@+id/ll_fragment_home_menu_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_fragment_home"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_fragment_home_talent_pool"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ssdk_oks_classic_facebook" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="人才库"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fragment_home_budget_program"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ssdk_oks_classic_alipay" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预算方案"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fragment_home_material_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ssdk_oks_classic_googleplus" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="材料选购"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fragment_home_menu_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:baselineAligned="true"
        android:layout_below="@+id/ll_fragment_home_menu_one"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_fragment_home_credit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ssdk_oks_classic_wechat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="信誉值"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fragment_home_vip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ssdk_oks_classic_linkedin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIP"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fragment_home_query"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ssdk_oks_classic_qq" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查询"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>