<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <com.anjile.shineourlove.rxjavaapplication.view.RoundImagePointView
        android:id="@+id/img_item_message_list_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ssdk_oks_classic_googleplus" />

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_item_message_list_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_item_message_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_word"
            android:textSize="14sp"
            tools:text="系统消息" />

        <TextView
            android:id="@+id/txt_item_message_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/gray_word_hint"
            android:textSize="13sp"
            tools:text="本次注册获取积分50" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_item_message_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/gray_word_hint"
        android:textSize="13sp"
        tools:text="2017-9-26" />
</RelativeLayout>