<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_text_vertical_margin"
        android:paddingTop="@dimen/item_text_vertical_margin">

        <TextView
            android:id="@+id/txt_item_simple_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_weight="1"
            android:textColor="@color/black_word"
            android:textSize="@dimen/item_text_size"
            tools:text="金陵兵工厂" />

        <TextView
            android:id="@+id/txt_item_simple_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/item_margin_right"
            android:layout_marginStart="24dp"
            android:textColor="@color/gray_word"
            android:textSize="@dimen/item_text_size"
            tools:text="2001-9 到 2017-10" />
    </LinearLayout>

    <include layout="@layout/item_divide_line" />

</LinearLayout>