<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_personal_setting_adapter_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_weight="1"
            android:text="专业名称"
            android:textColor="@color/black_word"
            android:textSize="@dimen/item_text_size" />

        <TextView
            android:id="@+id/txt_personal_setting_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_marginRight="8dp"
            android:hint="@string/please_choose"
            android:textColor="@color/gray_word"
            android:textColorHint="@color/gray_word_hint"
            android:textSize="@dimen/item_text_size"
            tools:text="安装造价师" />

        <ImageView
            android:layout_width="@dimen/right_arrow_width"
            android:layout_height="@dimen/right_arrow_height"
            android:layout_marginRight="@dimen/item_margin_right"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <include layout="@layout/item_divide_line" />

    <LinearLayout
        android:id="@+id/ll_personal_setting_adapter_grade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_weight="1"
            android:text="等级"
            android:textColor="@color/black_word"
            android:textSize="@dimen/item_text_size" />

        <TextView
            android:id="@+id/txt_personal_setting_adapter_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_marginRight="8dp"
            android:hint="@string/please_choose"
            android:textColor="@color/gray_word"
            android:textColorHint="@color/gray_word_hint"
            android:textSize="@dimen/item_text_size"
            tools:text="安装造价师" />

        <ImageView
            android:layout_width="@dimen/right_arrow_width"
            android:layout_height="@dimen/right_arrow_height"
            android:layout_marginRight="@dimen/item_margin_right"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <include layout="@layout/item_divide_line" />

    <LinearLayout
        android:id="@+id/ll_personal_setting_adapter_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_weight="1"
            android:text="数量"
            android:textColor="@color/black_word"
            android:textSize="@dimen/item_text_size" />

        <TextView
            android:id="@+id/txt_personal_setting_adapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_marginRight="8dp"
            android:hint="@string/please_choose"
            android:textColor="@color/gray_word"
            android:textColorHint="@color/gray_word_hint"
            android:textSize="@dimen/item_text_size"
            tools:text="安装造价师" />

        <ImageView
            android:layout_width="@dimen/right_arrow_width"
            android:layout_height="@dimen/right_arrow_height"
            android:layout_marginRight="@dimen/item_margin_right"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <include layout="@layout/item_divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_personal_setting_adapter_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_weight="1"
            android:gravity="center"
            android:text="删除该条"
            android:textColor="@color/black_word"
            android:textSize="@dimen/item_text_size" />

        <TextView
            android:id="@+id/txt_personal_setting_adapter_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_marginRight="@dimen/item_margin_right"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/please_choose"
            android:text="清空数据"
            android:textColor="@color/black_word"
            android:textColorHint="@color/gray_word_hint"
            android:textSize="@dimen/item_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_personal_setting_adapter_line"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/gray_divide" />
</LinearLayout>